<script>
    // 刪除模板功能
    function deleteTemplate() {
        if (confirm('Are you sure you want to delete this email template? This action cannot be undone!')) {
            $.ajax({
                url: '/emailTemplate/<%= template._id %>',
                type: 'DELETE',
                success: function(response) {
                    const alertHtml = `
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            Email template deleted successfully! Redirecting...
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    `;
                    $('#alertContainer').append(alertHtml);
                    // 跳轉回列表頁面
                    setTimeout(() => {
                        <% if (eventId) { %>
                        window.location.href = '/events/<%= eventId %>/emailTemplate';
                        <% } else { %>
                        window.location.href = '/emailTemplate';
                        <% } %>
                    }, 1500);
                },
                error: function(xhr, status, error) {
                    console.error('Error deleting email template:', error);
                    const alertHtml = `
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            Failed to delete email template. Please try again later.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    `;
                    $('#alertContainer').append(alertHtml);
                }
            });
        }
    }

    $(document).ready(function () {
            $('#emailTemplateForm').on('submit', function (e) {
                e.preventDefault(); // 防止表單默認提交

                const emailTemplate = {
                    subject: $('#subject').val(),
                    type: $('#type').val(),
                    content: tinymce.get('content').getContent(), // 獲取 WYSIWYG 編輯器的內容
                };

                // 發送 AJAX 請求保存電子郵件模板
                $.ajax({
                    url: '/emailTemplate/<%= template._id %>', // 假設您有一個保存電子郵件模板的路由
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(emailTemplate),
                    success: function (response) {
                        // 顯示成功的 alert
                        const alertHtml = `
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                Email template saved successfully!
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        `;
                        $('#alertContainer').append(alertHtml);
                        // 自動隱藏 alert
                        setTimeout(() => {
                            $('.alert').alert('close');
                        }, 1500);
                        // 清空表單
                        $('#emailTemplateForm')[0].reset();
                    },
                    error: function (xhr, status, error) {
                        console.error('Error saving email template:', error);
                        const alertHtml = `
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                Failed to save email template. Please try again later.
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        `;
                        $('#alertContainer').append(alertHtml);
                    }
                }).done(function () {
                    // page refresh
                    location.reload();
                });
            });
        });

        $('#sendEmailForm').on('submit', function (e) {
            e.preventDefault(); // 防止表單默認提交

            const emailData = {
                recipient: $('#recipient').val(),
                subject: $('#subject').val(),
                content: tinymce.get('content').getContent(), // 獲取 WYSIWYG 編輯器的內容
            };

            // 發送 AJAX 請求發送電子郵件
            $.ajax({
                url: '/emailTemplate/<%= template._id %>/send', // 假設您有一個發送電子郵件的路由
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(emailData),
                success: function (response) {
                    // 顯示成功的 alert
                    const alertHtml = `
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                Email sent successfully!
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                    `;
                    $('#alertContainer').append(alertHtml);
                    // 自動隱藏 alert
                    setTimeout(() => {
                        $('.alert').alert('close');
                    }, 1500);
                    // 清空表單
                    $('#sendEmailForm')[0].reset();
                    // 重新加載頁面以顯示最新的發送記錄
                },
                error: function (xhr, status, error) {
                    console.error('Error sending email:', error);
                    const alertHtml = `
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                Failed to send email. Please try again later.
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                    `;
                    $('#alertContainer').append(alertHtml);
                }
            }).done(function () {
                // 重新加載頁面以顯示最新的發送記錄
                location.reload();
            });
        });
    </script>

