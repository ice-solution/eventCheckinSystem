    <script src="https://cdn.tiny.cloud/1/0o0ixrpieipnq3fsu3kbsdu9e627qg468y6lpup3gmhx8lz7/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#content', // WYSIWYG 編輯器的選擇器
            plugins: 'image code link',
            toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright | image link | code',
            images_upload_url: '/emailTemplate/upload', // 圖片上傳的路由
            automatic_uploads: true,
            convert_urls: true, // 啟用 URL 轉換
            relative_urls: false, // 使用絕對 URL
            remove_script_host: false, // 保留主機名
            document_base_url: window.location.origin, // 設置基礎 URL
            file_picker_types: 'image',
            file_picker_callback: function (callback, value, meta) {
                if (meta.filetype === 'image') {
                    var input = document.createElement('input');
                    input.setAttribute('type', 'file');
                    input.setAttribute('accept', 'image/*');
                    input.onchange = function () {
                        var file = this.files[0];
                        var reader = new FileReader();
                        reader.onload = function () {
                            callback(reader.result, { alt: file.name });
                        };
                        reader.readAsDataURL(file);
                    };
                    input.click();
                }
            },
            // 圖片處理配置
            image_advtab: true,
            image_dimensions: true,
            image_class_list: [
                {title: 'Responsive', value: 'img-fluid'}
            ],
            // 只對 banner 圖片使用絕對 URL，其他圖片保持相對路徑
            urlconverter_callback: function(url, node, on_save, name) {
                // 檢查是否為 banner 相關的圖片
                if (url && (url.includes('banner') || url.includes('exvent'))) {
                    // 對 banner 圖片使用絕對 URL
                    if (url.indexOf('http') !== 0 && url.indexOf('//') !== 0) {
                        if (url.indexOf('/') === 0) {
                            return window.location.origin + url;
                        } else {
                            return window.location.origin + '/' + url;
                        }
                    }
                }
                // 其他圖片（如 QR code）保持相對路徑
                return url;
            }
        });
    </script>
<div id="right-panel" class="right-panel">
    <%- include ("components/rightpanel_header") %>
    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Event Email Template</strong>
                        </div>
                        <div class="card-body">
        <form id="emailTemplateForm">
            <div class="form-group">
                <label for="subject">Email Subject</label>
                <input type="text" class="form-control" id="subject" value="<%= template.subject %>" required>
            </div>
            <div class="form-group">
                <label for="type">Email Type</label>
                <select class="form-control" id="type" required>
                    <option value="welcome" <%= template.type === 'welcome' ? 'selected' : '' %>>Welcome Email</option>
                    <option value="reminder" <%= template.type === 'reminder' ? 'selected' : '' %>>Reminder Email</option>
                    <option value="confirmation" <%= template.type === 'confirmation' ? 'selected' : '' %>>Confirmation Email</option>
                    <option value="custom" <%= template.type === 'custom' ? 'selected' : '' %>>Custom Email</option>
                </select>
            </div>
            <div class="form-group">
                <label for="body">Email Content</label>
                <textarea class="form-control" name="content" id="content" rows="10">
                    <%= template.content %>
                </textarea>
            </div>
                            <button type="submit" class="btn btn-primary">Save Template</button>
                            <button type="button" class="btn btn-danger" onclick="deleteTemplate()">Delete Template</button>
                            <% if (eventId) { %>
                            <a href="/events/<%= eventId %>/emailTemplate" class="btn btn-secondary">Back to Event Email Template List</a>
                            <% } else { %>
                            <a href="/emailTemplate" class="btn btn-secondary">Back to Admin</a>
                            <% } %>
                            </form>
                            <div id="alertContainer" class="mt-3"></div>
                            
                            <hr>
                            <h5>Send Email</h5>
                            <form id="sendEmailForm">
                                <div class="form-group">
                                    <label for="recipient">Recipients</label>
                                    <textarea class="form-control" id="recipient" rows="3" placeholder="Please enter recipient email addresses"></textarea>
                                </div>
                                <button type="submit" class="btn btn-success">Send Email</button>
                            </form>
                        </div>
                    </div>
                    
                    <!-- 郵件追蹤統計 -->
                    <% if (stats) { %>
                    <div class="card mt-3">
                        <div class="card-header">
                            <strong class="card-title">郵件追蹤統計 (Email Tracking Statistics)</strong>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body">
                                            <h5>總發送數</h5>
                                            <h3><%= stats.total %></h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-success text-white">
                                        <div class="card-body">
                                            <h5>成功發送</h5>
                                            <h3><%= stats.sent %></h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-info text-white">
                                        <div class="card-body">
                                            <h5>打開數</h5>
                                            <h3><%= stats.opened %></h3>
                                            <small>打開率: <%= stats.openRate %>%</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning text-white">
                                        <div class="card-body">
                                            <h5>點擊數</h5>
                                            <h3><%= stats.clicked %></h3>
                                            <small>點擊率: <%= stats.clickRate %>%</small>
                                            <br>
                                            <small>點擊打開比: <%= stats.clickToOpenRate %>%</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>

                    <div class="card mt-3">
                        <div class="card-header">
                            <strong class="card-title">Send Records (發送記錄)</strong>
                        </div>
                        <div class="card-body">

                            <table id="email-records-data-table" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Send Time (發送時間)</th>
                                        <th>Recipients (收件人)</th>
                                        <th>Status (狀態)</th>
                                        <th>Opened (打開)</th>
                                        <th>Clicked (點擊)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% emailRecords.forEach(function(record) { %>
                                        <tr>
                                            <td>
                                                <%= new Date(record.created_at).toLocaleString("en-GB") %>
                                            </td>
                                            <td>
                                                <%= record.recipient %>
                                            </td>
                                            <td>
                                                <span class="badge badge-<%= record.status === '成功' || record.status === 'sent' || record.status === 'delivered' ? 'success' : 'danger' %>">
                                                    <%= record.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <% if (record.opened_at) { %>
                                                    <span class="badge badge-info">
                                                        ✓ <%= record.opened_count || 1 %> 次
                                                    </span>
                                                    <br>
                                                    <small><%= new Date(record.opened_at).toLocaleString("en-GB") %></small>
                                                <% } else { %>
                                                    <span class="badge badge-secondary">未打開</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (record.clicked_at) { %>
                                                    <span class="badge badge-warning">
                                                        ✓ <%= record.clicked_count || 1 %> 次
                                                    </span>
                                                    <br>
                                                    <small><%= new Date(record.clicked_at).toLocaleString("en-GB") %></small>
                                                <% } else { %>
                                                    <span class="badge badge-secondary">未點擊</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

