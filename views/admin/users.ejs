<script src="/admin/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
<script src="/admin/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
<script src="/admin/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
<script src="/admin/assets/js/lib/data-table/jszip.min.js"></script>
<script src="/admin/assets/js/lib/data-table/vfs_fonts.js"></script>
<script src="/admin/assets/js/lib/data-table/buttons.html5.min.js"></script>
<script src="/admin/assets/js/lib/data-table/buttons.print.min.js"></script>
<script src="/admin/assets/js/lib/data-table/buttons.colVis.min.js"></script>
<script>
    $(document).ready(function() {
        // Check if DataTables is loaded
        if (typeof $.fn.DataTable === 'undefined') {
            console.error('DataTables is not loaded!');
            alert('DataTables plugin is not loaded. Please refresh the page.');
            return;
        }
        
        // Store all user IDs for select all functionality
        const allUserIds = [];
        <% event.users.forEach(user => { %>
            allUserIds.push('<%= user._id %>');
        <% }); %>

        // Global set to track selected user IDs across all pages
        const selectedUserIds = new Set();

        // Initialize DataTable with inline editing
        const table = $('#usersTable').DataTable({
            pageLength: 50,
            dom: 'frtip', // Remove buttons
            columnDefs: [
                {
                    targets: 0, // Select checkbox column
                    orderable: false,
                    searchable: false
                },
                {
                    targets: -2, // Checked In column
                    orderable: false,
                    searchable: false
                },
                {
                    targets: -1, // Actions column
                    orderable: false,
                    searchable: false
                }
            ],
            drawCallback: function() {
                // Restore checkbox states after table redraw
                $('.user-select').each(function() {
                    const userId = $(this).data('_id');
                    if (selectedUserIds.has(userId)) {
                        $(this).prop('checked', true);
                    }
                });
                updateSelectAllCheckbox();
                updateBatchDeleteButton();
                updateBatchSendEmailButton();
            }
        });

        // Select All Users button - selects all users across all pages
        $('#selectAllUsersBtn').on('click', function() {
            // Add all user IDs to selected set
            allUserIds.forEach(userId => {
                selectedUserIds.add(userId);
            });
            // Select all checkboxes in current view
            $('.user-select').prop('checked', true);
            $('#selectAll').prop('checked', true).prop('indeterminate', false);
            updateBatchDeleteButton();
            updateBatchSendEmailButton();
            showAlert('success', `已選擇所有 ${allUserIds.length} 位用戶`);
        });

        // Deselect All Users button - unchecks all checkboxes
        $('#deselectAllUsersBtn').on('click', function() {
            // Clear selected set
            selectedUserIds.clear();
            // Uncheck all checkboxes in current view
            $('.user-select').prop('checked', false);
            $('#selectAll').prop('checked', false).prop('indeterminate', false);
            updateBatchDeleteButton();
            updateBatchSendEmailButton();
            showAlert('info', '已取消所有選擇');
        });

        // Store resend email context
        let resendEmailContext = {
            userId: null,
            emailType: null,
            button: null,
            originalHtml: null
        };

        // Resend email functionality (支持選擇類型)
        $('#usersTable tbody').on('click', '.resend-email-option', function(e) {
            e.preventDefault();
            const _id = $(this).closest('.btn-group').find('.resend-email-btn').data('_id');
            const emailType = $(this).data('type');
            const event_id = '<%= event._id %>';
            const button = $(this).closest('.btn-group').find('.resend-email-btn');
            const originalHtml = button.html();

            // Store context for later use
            resendEmailContext = {
                userId: _id,
                emailType: emailType,
                button: button,
                originalHtml: originalHtml
            };

            // Load templates for this type
            const $templateSelect = $('#resendEmailTemplate');
            const $templateGroup = $('#resendEmailTemplateGroup');
            
            $templateSelect.html('<option value="">使用默認模板 (Use Default Template)</option>');
            $templateGroup.hide();

            $.ajax({
                url: `/events/api/${event_id}/emailTemplates`,
                type: 'GET',
                data: { type: emailType },
                success: function(templates) {
                    if (templates && templates.length > 0) {
                        templates.forEach(function(template) {
                            const label = template.eventId ? 
                                `${template.subject} (Event Template)` : 
                                `${template.subject} (Global Template)`;
                            $templateSelect.append(`<option value="${template._id}">${label}</option>`);
                        });
                        $templateGroup.show();
                    }
                    
                    // Show modal for template selection
                    const $modal = $('#resendEmailModal');
                    if ($modal.length === 0) {
                        console.error('Resend email modal not found!');
                        showAlert('danger', 'Modal 元素未找到，請刷新頁面。');
                        return;
                    }
                    
                    // Reset modal state before showing
                    $modal.removeClass('show').attr('aria-hidden', 'false');
                    
                    // Show modal - Bootstrap 4 syntax
                    $modal.modal('show');
                    
                    // Ensure modal is visible (fallback if Bootstrap doesn't work)
                    setTimeout(function() {
                        if (!$modal.hasClass('show') || $modal.css('display') === 'none') {
                            $modal.addClass('show').css('display', 'block');
                            $('body').addClass('modal-open');
                            if ($('.modal-backdrop').length === 0) {
                                $('<div class="modal-backdrop fade show"></div>').appendTo('body');
                            }
                        }
                    }, 200);
                },
                error: function(xhr) {
                    console.error('Error fetching email templates:', xhr);
                    // If error, proceed with default template
                    confirmResendEmail();
                }
            });
        });

        // Confirm resend email (with template selection)
        function confirmResendEmail() {
            const emailTemplateId = $('#resendEmailTemplate').val() || null;
            const event_id = '<%= event._id %>';
            const { userId, emailType, button, originalHtml } = resendEmailContext;

            if (!userId || !emailType) {
                showAlert('danger', 'Missing user or email type information.');
                return;
            }

            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>');

            $.ajax({
                url: `/events/${event_id}/users/${userId}/resend-email`,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ 
                    emailType: emailType,
                    emailTemplateId: emailTemplateId
                }),
                success: function() {
                    showAlert('success', `${emailType} email resent successfully!`);
                    const $modal = $('#resendEmailModal');
                    $modal.modal('hide');
                    // Cleanup modal state
                    setTimeout(function() {
                        $modal.removeClass('show').attr('aria-hidden', 'true');
                        $('.modal-backdrop').remove();
                        $('body').removeClass('modal-open').css({
                            'padding-right': '',
                            'overflow': ''
                        });
                    }, 300);
                },
                error: function(xhr) {
                    console.error('Error resending email:', xhr.responseText);
                    showAlert('danger', 'Failed to resend email. Please try again.');
                },
                complete: function() {
                    button.prop('disabled', false).html(originalHtml);
                }
            });
        }

        // Confirm button in resend email modal
        $('#confirmResendEmail').on('click', function() {
            confirmResendEmail();
        });
        
        // Handle resend email modal close events
        $('#resendEmailModal').on('hidden.bs.modal', function() {
            // Cleanup when modal is fully hidden
            const $modal = $(this);
            $modal.removeClass('show').attr('aria-hidden', 'true');
            $('.modal-backdrop').remove();
            $('body').removeClass('modal-open').css({
                'padding-right': '',
                'overflow': ''
            });
        });
        
        // Handle close button clicks for resend email modal
        $(document).off('click', '#resendEmailModal .close, #resendEmailModal [data-dismiss="modal"]');
        $(document).on('click', '#resendEmailModal .close, #resendEmailModal [data-dismiss="modal"]', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $('#resendEmailModal').modal('hide');
        });

        // Batch delete functionality
        $('#selectAll').on('change', function() {
            const isChecked = $(this).is(':checked');
            $('.user-select').each(function() {
                const userId = $(this).data('_id');
                if (isChecked) {
                    selectedUserIds.add(userId);
                } else {
                    selectedUserIds.delete(userId);
                }
                $(this).prop('checked', isChecked);
            });
            updateBatchDeleteButton();
            updateBatchSendEmailButton();
            updateSelectAllCheckbox();
        });

        // Individual checkbox change
        $('#usersTable tbody').on('change', '.user-select', function() {
            const userId = $(this).data('_id');
            if ($(this).is(':checked')) {
                selectedUserIds.add(userId);
            } else {
                selectedUserIds.delete(userId);
            }
            updateBatchDeleteButton();
            updateBatchSendEmailButton();
            updateSelectAllCheckbox();
        });

        // Update batch delete button visibility
        function updateBatchDeleteButton() {
            const selectedCount = selectedUserIds.size;
            if (selectedCount > 0) {
                $('#batchDeleteBtn').show().text(`Batch Delete Selected (${selectedCount})`);
            } else {
                $('#batchDeleteBtn').hide();
            }
        }

        // Update batch send email button visibility
        function updateBatchSendEmailButton() {
            const selectedCount = selectedUserIds.size;
            if (selectedCount > 0) {
                $('#batchSendEmailBtn').show().text(`Batch Send Email (${selectedCount})`);
            } else {
                $('#batchSendEmailBtn').hide();
            }
        }

        // Update select all checkbox state
        function updateSelectAllCheckbox() {
            const totalCheckboxes = $('.user-select').length;
            const checkedCheckboxes = $('.user-select:checked').length;
            
            if (checkedCheckboxes === 0) {
                $('#selectAll').prop('indeterminate', false).prop('checked', false);
            } else if (checkedCheckboxes === totalCheckboxes) {
                $('#selectAll').prop('indeterminate', false).prop('checked', true);
            } else {
                $('#selectAll').prop('indeterminate', true);
            }
        }

        // Batch delete button click
        $('#batchDeleteBtn').on('click', function() {
            // Get all selected user IDs from the Set (includes all pages)
            const selectedIds = Array.from(selectedUserIds);

            if (selectedIds.length === 0) {
                showAlert('warning', '請選擇要刪除的用戶。');
                return;
            }

            if (confirm(`確定要刪除 ${selectedIds.length} 位選中的用戶嗎？`)) {
                // Send all user IDs in one request
                $.ajax({
                    url: `/events/<%= event._id %>/users/batch`,
                    type: 'DELETE',
                    contentType: 'application/json',
                    data: JSON.stringify({ userIds: selectedIds }),
                    success: function(response) {
                        // Remove all selected user IDs from the set
                        selectedIds.forEach(userId => {
                            selectedUserIds.delete(userId);
                            // Try to remove from table if visible
                            const row = $(`.user-select[data-_id="${userId}"]`).closest('tr');
                            if (row.length) {
                                table.row(row).remove();
                            }
                        });
                        table.draw();
                        
                        showAlert('success', `成功刪除 ${response.deletedCount} 位用戶！`);
                        updateBatchDeleteButton();
                        updateBatchSendEmailButton();
                        updateSelectAllCheckbox();
                    },
                    error: function(xhr, status, error) {
                        console.error('Error batch deleting users:', error);
                        showAlert('danger', '刪除用戶失敗，請重試。');
                    }
                });
            }
        });

        // Function to properly close modal
        function closeBatchSendEmailModal() {
            const $modal = $('#batchSendEmailModal');
            
            // Try Bootstrap method first
            if (typeof $modal.modal === 'function') {
                try {
                    $modal.modal('hide');
                } catch(e) {
                    console.log('Bootstrap modal hide failed, using manual close');
                }
            }
            
            // Force cleanup after a short delay to allow animation
            setTimeout(function() {
                // Remove modal classes and hide
                $modal.removeClass('show').css('display', 'none').attr('aria-hidden', 'true');
                
                // Remove all backdrops
                $('.modal-backdrop').remove();
                
                // Clean up body
                $('body').removeClass('modal-open').css({
                    'padding-right': '',
                    'overflow': ''
                });
            }, 300);
        }

        // Batch send email button click
        $('#batchSendEmailBtn').on('click', function() {
            // Get all selected user IDs from the Set (includes all pages)
            const selectedIds = Array.from(selectedUserIds);

            if (selectedIds.length === 0) {
                showAlert('warning', '請選擇要發送郵件的用戶。');
                return;
            }

            // Clean up any existing modal state first
            $('.modal-backdrop').remove();
            $('body').removeClass('modal-open').css('padding-right', '');
            
            // Update modal with selected count
            $('#selectedUsersCount').text(selectedIds.length);
            // Reset email type to default
            $('#batchEmailType').val('invitation');
            
            // Ensure modal exists and show it
            const $modal = $('#batchSendEmailModal');
            if ($modal.length === 0) {
                console.error('Modal element not found!');
                showAlert('danger', 'Modal 元素未找到，請刷新頁面。');
                return;
            }
            
            // Reset modal state before showing
            $modal.removeClass('show').attr('aria-hidden', 'false');
            
            // Show modal - Bootstrap 4 syntax
            $modal.modal('show');
            
            // Ensure modal is visible (fallback if Bootstrap doesn't work)
            setTimeout(function() {
                if (!$modal.hasClass('show') || $modal.css('display') === 'none') {
                    $modal.addClass('show').css('display', 'block');
                    $('body').addClass('modal-open');
                    if ($('.modal-backdrop').length === 0) {
                        $('<div class="modal-backdrop fade show"></div>').appendTo('body');
                    }
                }
            }, 200);
        });

        // Handle modal close events
        $('#batchSendEmailModal').on('hidden.bs.modal', function() {
            // Cleanup when modal is fully hidden
            const $modal = $(this);
            $modal.removeClass('show').attr('aria-hidden', 'true');
            $('.modal-backdrop').remove();
            $('body').removeClass('modal-open').css({
                'padding-right': '',
                'overflow': ''
            });
        });

        // Handle close button clicks - prevent event bubbling
        $(document).off('click', '#batchSendEmailModal .close, #batchSendEmailModal [data-dismiss="modal"]');
        $(document).on('click', '#batchSendEmailModal .close, #batchSendEmailModal [data-dismiss="modal"]', function(e) {
            e.preventDefault();
            e.stopPropagation();
            closeBatchSendEmailModal();
        });

        // Handle ESC key to close modal
        $(document).off('keydown.modal-close');
        $(document).on('keydown.modal-close', function(e) {
            if (e.key === 'Escape' || e.keyCode === 27) {
                if ($('#batchSendEmailModal').hasClass('show')) {
                    e.preventDefault();
                    closeBatchSendEmailModal();
                }
            }
        });

        // Handle backdrop click to close modal
        $('#batchSendEmailModal').off('click.backdrop');
        $('#batchSendEmailModal').on('click.backdrop', function(e) {
            // Only close if clicking directly on the modal backdrop, not on modal-content
            if ($(e.target).is('#batchSendEmailModal') && !$(e.target).closest('.modal-content').length) {
                e.preventDefault();
                closeBatchSendEmailModal();
            }
        });

        // Confirm batch send email
        $('#confirmBatchSendEmail').on('click', function() {
            // Get all selected user IDs from the Set (includes all pages)
            const selectedIds = Array.from(selectedUserIds);

            if (selectedIds.length === 0) {
                showAlert('warning', '請選擇要發送郵件的用戶。');
                closeBatchSendEmailModal();
                return;
            }

            const emailType = $('#batchEmailType').val();
            if (!emailType) {
                showAlert('warning', '請選擇郵件類型。');
                return;
            }

            const emailTemplateId = $('#batchEmailTemplate').val() || null; // 可選的模板 ID

            const button = $(this);
            const originalText = button.html();
            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> 發送中...');

            $.ajax({
                url: `/events/<%= event._id %>/users/batch-send-email`,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ 
                    userIds: selectedIds,
                    emailType: emailType,
                    emailTemplateId: emailTemplateId
                }),
                success: function(response) {
                    closeBatchSendEmailModal();
                    const results = response.results || {};
                    const emailType = response.emailType || 'unknown';
                    
                    // Build results HTML
                    let resultsHtml = `
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> 發送摘要 (Summary)</h6>
                            <p><strong>郵件類型 (Email Type):</strong> ${emailType}</p>
                            <p><strong>成功 (Success):</strong> <span class="badge badge-success">${results.success}</span></p>
                            <p><strong>失敗 (Failed):</strong> <span class="badge badge-danger">${results.failed}</span></p>
                            <p><strong>跳過 (Skipped):</strong> <span class="badge badge-warning">${results.skipped}</span></p>
                        </div>
                    `;
                    
                    // Show detailed results if available
                    if (results.details && results.details.length > 0) {
                        resultsHtml += `
                            <h6>詳細發送記錄 (Detailed Send Records)</h6>
                            <div style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-sm table-bordered">
