<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <title>Guest Check-in</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            display: flex;
            margin-top: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .user-list {
            width: 70%;
            border-right: 1px solid #dee2e6;
            padding: 20px; /* Increased padding */
            background-color: #ffffff;
            border-radius: 10px 0 0 10px;
        }
        .user-details {
            width: 30%;
            padding: 20px; /* Increased padding */
            background-color: #ffffff;
            border-radius: 0 10px 10px 0;
        }
        h4 {
            margin-top: 0;
        }
        /* Lightbox styles */
        .lightbox {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
        }
        .lightbox-content {
            position: relative;
            width: 80%;
            max-width: 600px;
        }
        #checkInButton {
            display: none;
        }
        #printButton {
            display: none;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="user-list">
        <h4>Guest List</h4>
        
        <!-- <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search Users..." onkeyup="searchUsers()"> -->
        <button id="scanButton" class="btn btn-primary mt-3" onclick="openLightbox()">Scan QR Code</button>
        <button id="refreshListButton" class="btn btn-info mt-3 ml-2" onclick="refreshUserList()">Refresh List</button>
        <!-- <button id="addGuestButton" class="btn btn-success mt-3" data-toggle="modal" data-target="#addGuestModal">Add Guest</button> -->
        
        <table id="userTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Table</th>
                    <th>Company</th>
                    <th>Phone</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="userList">
                <% event.users.forEach(user => { %>
                    <tr onclick="showDetails('<%= user.name %>', '<%= user.table %>', '<%= user.company %>', '<%= user.phone %>', <%= user.isCheckIn %>, '<%= user._id %>')">
                        <td><%= user.name %></td>
                        <td><%= typeof user.table !== 'undefined' ? user.table : '' %></td>
                        <td><%= typeof user.company !== 'undefined' ? user.company : '' %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <span class="<%= user.isCheckIn ? 'text-primary' : 'text-secondary' %>">
                                <%= user.isCheckIn ? 'Checked In' : 'Check In' %>
                            </span>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
    </div>
    <div class="user-details" id="userDetails">
        <h4>Guest Details</h4>
        <p>Select a guest to view details.</p>
        <div id="detailsContent"></div>
        <button id="checkInButton" class="btn btn-primary mt-3" onclick="checkInUser()">Check In</button>
        <button id="printButton" class="btn btn-secondary mt-3" onclick="printDetails()">Print</button>
        <button id="refreshButton" class="btn btn-info mt-3" onclick="refreshUserList()">Refresh List</button>
    </div>
</div>

<!-- Add Guest Modal -->
<div class="modal fade" id="addGuestModal" tabindex="-1" role="dialog" aria-labelledby="addGuestModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addGuestModalLabel">Add Guest</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addGuestForm">
                    <div class="form-group">
                        <label for="guestName">Name</label>
                        <input type="text" class="form-control" id="guestName" required>
                    </div>
                    <div class="form-group">
                        <label for="guestCompany">Company</label>
                        <input type="text" class="form-control" id="guestCompany">
                    </div>
                    <div class="form-group">
                        <label for="guestPhone">Phone</label>
                        <input type="text" class="form-control" id="guestPhone" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Guest</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Lightbox -->
<div class="lightbox" id="lightbox" onclick="closeLightbox()">
    <div class="lightbox-content">
        <div id="reader" style="width: 100%; margin: auto;"></div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html5-qrcode/2.3.8/html5-qrcode.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script>
    const eventId = "<%= event._id %>"; // Get event ID from backend
    const html5QrCode = new Html5Qrcode("reader");
    let scanning = false;
    let currentUserId = null; // Store current user ID for check-in

    // Fetch user data
    function refreshUserList() {
        const refreshListBtn = $('#refreshListButton');
        const refreshBtn = $('#refreshButton');
        const originalText = 'Refresh List';
        
        // Show loading state for both buttons
        refreshListBtn.prop('disabled', true).text('Refreshing...');
        refreshBtn.prop('disabled', true).text('Refreshing...');
        
        fetchUsers().then(() => {
            // Restore button state after a short delay
            setTimeout(() => {
                refreshListBtn.prop('disabled', false).text(originalText);
                refreshBtn.prop('disabled', false).text(originalText);
            }, 500);
        });
    }

    function fetchUsers() {
        return $.ajax({
            url: `/events/${eventId}/users/data`, // API to fetch user data
            method: 'GET',
            cache: false, // Prevent caching
            success: function(users) {
                console.log('Fetched users:', users); // Debug log
                // Update DataTable data without recreating
                if ($.fn.DataTable.isDataTable('#userTable')) {
                    const table = $('#userTable').DataTable();
                    table.clear();
                    users.forEach(user => {
                        const safeName = user.name || '';
                        const safeTable = (user.table && user.table !== 'undefined') ? user.table : '';
                        const safeCompany = (user.company && user.company !== 'undefined') ? user.company : '';
                        const safePhone = (user.phone && user.phone !== 'undefined') ? user.phone : '';
                        
                        table.row.add([
                            safeName,
                            safeTable,
                            safeCompany,
                            safePhone,
                            `<span class="${user.isCheckIn ? 'text-primary' : 'text-secondary'}">${user.isCheckIn ? 'Checked In' : 'Check In'}</span>`
                        ]);
                    });
                    table.draw();
                    
                    // Add click event handlers for table rows
                    $('#userTable tbody').off('click', 'tr').on('click', 'tr', function() {
                        const rowData = table.row(this).data();
                        if (rowData) {
                            const user = users[$(this).index()];
                            showDetails(user.name, user.table, user.company, user.phone, user.isCheckIn, user._id);
                        }
                    });
                } else {
                    // Initialize DataTable if not exists
                    const table = $('#userTable').DataTable({
                        "pageLength": 25,
                        "order": [[ 0, "asc" ]],
                        "columnDefs": [
                            {
                                "targets": -1, // Last column (Status)
                                "orderable": false
                            }
                        ]
                    });
                    
                    // Add click event handlers for table rows
                    $('#userTable tbody').off('click', 'tr').on('click', 'tr', function() {
                        const rowData = table.row(this).data();
                        if (rowData) {
                            const user = users[$(this).index()];
                            showDetails(user.name, user.table, user.company, user.phone, user.isCheckIn, user._id);
                        }
                    });
                }
            },
            error: function(err) {
                console.error('Error fetching users:', err);
            }
        });
    }

    // Show user details
    function showDetails(name, table, company, phone, isCheckIn, userId) {
        console.log(table);
        
        // 處理 undefined 值，避免顯示 "undefined"
        const safeTable = (table && table !== 'undefined') ? table : '';
        const safeCompany = (company && company !== 'undefined') ? company : '';
        const safePhone = (phone && phone !== 'undefined') ? phone : '';
        const safeName = (name && name !== 'undefined') ? name : '';
        
        document.getElementById('detailsContent').innerHTML = `
            <h4>${safeName}</h4>
            <p>Table: ${safeTable}</p>
            <p>Company: ${safeCompany}</p>
            <p>Phone: ${safePhone}</p>
            <p>Checked In: ${isCheckIn ? 'Yes' : 'No'}</p>`
        document.getElementById('checkInButton').style.display = isCheckIn ? 'none' : 'inline-block'; // Show button based on check-in status
        document.getElementById('printButton').style.display = isCheckIn ? 'inline-block' : 'none';
        currentUserId = userId; // Store the current user ID for check-in
    }

    // Check in user
    function checkInUser() {
        if (!currentUserId) {
            alert('No user selected for check-in.');
            return;
        }
        $.ajax({
            url: `/events/${eventId}/users/${currentUserId}`, // Correct URL for check-in
            method: 'PUT', // Using PUT method for check-in
            contentType: 'application/json',
            data: JSON.stringify({ isCheckIn: true }), // Add isCheckIn: true
            success: function(response) {
                alert('User checked in successfully!');
                $('#addGuestModal').modal('hide'); // 關閉模態框
                fetchUsers(); // Refresh user list
            },
            error: function(err) {
                console.error('Error checking in user:', err);
                alert('Failed to check in user.');
            }
        });
    }

    // Search users
    function searchUsers() {
        const input = document.getElementById('searchInput').value.toLowerCase();
        const rows = document.querySelectorAll('#userList tr');
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(input) ? '' : 'none';
        });
    }

    // Open Lightbox
    function openLightbox() {
        document.getElementById('lightbox').style.display = 'flex';
        startScanning(); // Start scanning
    }

    // Close Lightbox
    function closeLightbox() {
        document.getElementById('lightbox').style.display = 'none';
        if (scanning) {
            html5QrCode.stop(); // Stop scanning
            scanning = false;
        }
    }

    // Start scanning QR code
    function startScanning() {
        if (scanning) return; // If already scanning, do not start again
        scanning = true;
        html5QrCode.start(
            { facingMode: "environment" }, // Use rear camera
            {
                fps: 10, // Frames per second
                qrbox: 250 // Size of QR code box
            },
            (decodedText, decodedResult) => {
                // When QR code is scanned
                scanning = false; // Stop scanning
                html5QrCode.stop(); // Stop scanning
                // Assume QR code contains user ID
                const userId = decodedText.split(',')[0];
                fetch(`/events/${eventId}/users/${userId}`)
                    .then(response => response.json())
                    .then(user => {
                        if (user) {
                            // If user is not checked in, perform check-in
                            if (!user.isCheckIn) {
                                $.ajax({
                                    url: `/events/${eventId}/users/${userId}`,
                                    method: 'PUT',
                                    contentType: 'application/json',
                                    data: JSON.stringify({ isCheckIn: true }),
                                    success: function(response) {
                                        console.log('Check-in successful:', response); // Debug log
                                        // Update the user object with new check-in status
                                        const updatedUser = { ...user, isCheckIn: true };
                                        showDetails(updatedUser.name, updatedUser.table, updatedUser.company, updatedUser.phone, true, updatedUser._id);
                                        alert('User checked in successfully!');
                                        // Update button states first
                                        document.getElementById('checkInButton').style.display = 'none';
                                        document.getElementById('printButton').style.display = 'inline-block';
                                        // Then refresh the user list to update the table
                                        setTimeout(() => {
                                            fetchUsers();
                                        }, 100); // Small delay to ensure server update
                                    },
                                    error: function(err) {
                                        console.error('Error checking in user:', err);
                                        alert('Failed to check in user.');
                                    }
                                });
                            } else {
                                // User is already checked in
                                showDetails(user.name, user.table, user.company, user.phone, user.isCheckIn, user._id);
                                alert('User is already checked in.');
                                fetchUsers();
                            }
                        } else {
                            alert('User not found');
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching user:', error);
                        alert('User not found');
                    });
                closeLightbox(); // Close Lightbox
            },
            (errorMessage) => {
                // When scan fails
                console.warn(`QR Code scan error: ${errorMessage}`);
            }
        ).catch(err => {
            console.error('Unable to start scanning:', err);
        });
    }

    // Print user details
    function printDetails() {
        // 只獲取姓名和公司信息，不包含 Table、Phone、Checked In
        const detailsElement = document.getElementById('detailsContent');
        const name = detailsElement.querySelector('h4').textContent;
        const company = detailsElement.querySelector('p:nth-of-type(2)').textContent.replace('Company: ', '');
        
        const printContent = `
            <style>
                @page {
                    size: 62mm 100mm;
                    margin: 0;
                }
                body {
                    width: 62mm;
                    height: 100mm;
                    margin: 0;
                    padding: 2mm;
                    font-family: Arial, sans-serif;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                    align-items: stretch;
                    box-sizing: border-box;
                }
                .content-container {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: stretch;
                    width: 100%;
                    height: 100%;
                    gap: 3mm;
                }
                .top-section {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }
                .bottom-section {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                    text-align: center;
                }
                h1 {
                    font-size: 22px;
                    margin: 0 0 1mm 0;
                    font-weight: bold;
                    line-height: 1.1;
                    text-align: center;
                    width: 100%;
                }
                .qrcode {
                    width: 38mm;
                    height: 38mm;
                }
                h3 {
                    font-size: 16px;
                    margin: 0;
                    color: #666;
                    font-weight: bold;
                    line-height: 1.1;
                    text-align: center;
                    width: 100%;
                }
            </style>
            <div class="content-container">
                <div class="top-section">
                    <div class="qrcode">
                        <img src="https://api.qrserver.com/v1/create-qr-code/?data=${name}&size=150x150" alt="QR Code" style="width: 100%; height: 100%;">
                    </div>
                </div>
                <div class="bottom-section">
                    <h1>${name}</h1>
                    <h3>${company}</h3>
                </div>
            </div>
        `;
        
        const printWindow = window.open('', '', 'height=600,width=800');
        printWindow.document.write('<html><head><title>Print User Details</title>');
        printWindow.document.write('</head><body>');
        printWindow.document.write(printContent);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        
        // printWindow.print();
        printLabel();
    }
    function printLabel() {
        const detailsElement = document.getElementById('detailsContent');
        const name = detailsElement.querySelector('h4').textContent;
        const company = detailsElement.querySelector('p:nth-of-type(2)').textContent.replace('Company: ', '');
        
        const printUrl = `brotherwebprint://print?filename=rsvp_label.lbx&size=62x100&copies=1&name=${encodeURIComponent(name)}&qrcode=${encodeURIComponent(name)}&company=${encodeURIComponent(company)}`;
        
        window.location.href = printUrl; // Use URL scheme to send print request
    }

    // 添加用戶的功能
    $('#addGuestForm').on('submit', function(event) {
        event.preventDefault(); // 防止表單默認提交

        const name = $('#guestName').val();
        const company = $('#guestCompany').val();
        const phone = $('#guestPhone').val();

        // 這裡可以發送 AJAX 請求到後端以添加用戶
        $.ajax({
            url: '/events/<%= event._id %>/users', // 根據您的路由設置調整 URL
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ 
                name, 
                table, 
                company, 
                phone, 
                role: 'guest', // 添加 role
                isCheckIn: true // 添加 checkin
            }),
            success: function(response) {
                alert('Guest added successfully!');
                $('#addGuestModal').modal('hide'); // 關閉模態框
                fetchUsers(); // 刷新用戶列表
            },
            error: function(err) {
                console.error('Error adding guest:', err);
                alert('Failed to add guest.');
            }
        });
    });

    // Initialize user data
    $(document).ready(function() {
        fetchUsers(); // Fetch user data
    });
</script>

</body>
</html>