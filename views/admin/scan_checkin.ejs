<!-- Lightbox -->
<div class="lightbox" id="lightbox" onclick="closeLightbox()">
    <div class="lightbox-content">
        <div id="reader" style="width: 100%; margin: auto;"></div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html5-qrcode/2.3.8/html5-qrcode.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script>
    const eventId = "<%= event._id %>"; // Get event ID from backend
    const formConfig = <%- JSON.stringify(formConfig || null) %>; // Get form config from backend
    const html5QrCode = new Html5Qrcode("reader");
    let scanning = false;
    let currentUserId = null; // Store current user ID for check-in
    
    // Helper function to get visible fields from formConfig
    function getVisibleFields() {
        const fields = [];
        if (formConfig && formConfig.sections) {
            formConfig.sections.forEach(section => {
                if (section.visible && section.fields) {
                    section.fields.forEach(field => {
                        if (field.visible) {
                            fields.push(field);
                        }
                    });
                }
            });
        }
        return fields;
    }
    
    // Helper function to get field label
    function getFieldLabel(field) {
        if (!formConfig) return field.fieldName || '';
        if (typeof field.label === 'string') {
            return field.label;
        } else if (field.label && field.label[formConfig.defaultLanguage]) {
            return field.label[formConfig.defaultLanguage];
        } else if (field.label && field.label.zh) {
            return field.label.zh;
        }
        return field.fieldName || '';
    }

    // Fetch user data
    function refreshUserList() {
        const refreshListBtn = $('#refreshListButton');
        const refreshBtn = $('#refreshButton');
        const originalText = 'Refresh List';
        
        // Show loading state for both buttons
        refreshListBtn.prop('disabled', true).text('Refreshing...');
        refreshBtn.prop('disabled', true).text('Refreshing...');
        
        fetchUsers().then(() => {
            // Restore button state after a short delay
            setTimeout(() => {
                refreshListBtn.prop('disabled', false).text(originalText);
                refreshBtn.prop('disabled', false).text(originalText);
            }, 500);
        });
    }

    function fetchUsers() {
        return $.ajax({
            url: `/events/${eventId}/users/data`, // API to fetch user data
            method: 'GET',
            cache: false, // Prevent caching
            success: function(users) {
                console.log('Fetched users:', users); // Debug log
                // Update DataTable data without recreating
                const visibleFields = getVisibleFields();
                
                if ($.fn.DataTable.isDataTable('#userTable')) {
                    const table = $('#userTable').DataTable();
                    table.clear();
                    users.forEach(user => {
                        const rowData = [];
                        
                        // Add data fields based on formConfig
                        if (visibleFields.length > 0) {
                            visibleFields.forEach(field => {
                                const value = user[field.fieldName] || '-';
                                rowData.push(value);
                            });
                        } else {
                            // Default fields if no formConfig
                            rowData.push(user.email || '-');
                            rowData.push(user.name || '-');
                            rowData.push(user.phone || '-');
                        }
                        
                        // Add Point and Status columns
                        rowData.push(user.point || 0);
                        rowData.push(`<span class="${user.isCheckIn ? 'text-primary' : 'text-secondary'}">${user.isCheckIn ? 'Checked In' : 'Check In'}</span>`);
                        
                        // Create row with user ID stored in data attribute
                        const rowNode = table.row.add(rowData).draw().node();
                        $(rowNode).attr('data-user-id', user._id);
                    });
                    
                    // Add click event handlers for table rows
                    $('#userTable tbody').off('click', 'tr').on('click', 'tr', function() {
                        showDetailsFromRow(this);
                    });
                } else {
                    // Initialize DataTable if not exists
                    const table = $('#userTable').DataTable({
                        "pageLength": 25,
                        "order": [[ 0, "asc" ]],
                        "columnDefs": [
                            {
                                "targets": -1, // Last column (Status)
                                "orderable": false
                            },
                            {
                                "targets": -2, // Point column
                                "orderable": false
                            }
                        ]
                    });
                    
                    // Add data-user-id to existing rows
                    $('#userTable tbody tr').each(function() {
                        const userId = $(this).attr('data-user-id');
                        if (userId) {
                            $(this).attr('data-user-id', userId);
                        }
                    });
                    
                    // Add click event handlers for table rows
                    $('#userTable tbody').off('click', 'tr').on('click', 'tr', function() {
                        showDetailsFromRow(this);
                    });
                }
            },
            error: function(err) {
                console.error('Error fetching users:', err);
            }
        });
    }

    // Show user details from row click
    function showDetailsFromRow(rowElement) {
        const userId = $(rowElement).data('user-id');
        if (!userId) {
            console.error('User ID not found in row');
            return;
        }
        
        // Fetch full user data
        fetch(`/events/${eventId}/users/${userId}`)
            .then(response => response.json())
            .then(user => {
                showDetailsFromUser(user);
            })
            .catch(error => {
                console.error('Error fetching user:', error);
                alert('Failed to load user details');
            });
    }
    
    // Show user details from user object
    function showDetailsFromUser(user) {
        if (!user) {
            console.error('User data is empty');
            return;
        }
        
        // 構建詳細信息HTML，根據formConfig動態顯示欄位
        let detailsHTML = `<h4>${user.name || '-'}</h4>`;
        
        const visibleFields = getVisibleFields();
        
        if (visibleFields.length > 0) {
            // 根據formConfig顯示欄位
            visibleFields.forEach(field => {
                const fieldValue = user[field.fieldName];
                if (fieldValue && fieldValue !== 'undefined' && fieldValue !== '-') {
                    const fieldLabel = getFieldLabel(field);
                    detailsHTML += `<p>${fieldLabel}: ${fieldValue}</p>`;
                }
            });
        } else {
            // 預設欄位（如果沒有formConfig）
            if (user.email && user.email !== 'undefined') {
                detailsHTML += `<p>Email: ${user.email}</p>`;
            }
            if (user.table && user.table !== 'undefined') {
                detailsHTML += `<p>Table: ${user.table}</p>`;
            }
            if (user.company && user.company !== 'undefined') {
                detailsHTML += `<p>Company: ${user.company}</p>`;
            }
            if (user.phone && user.phone !== 'undefined') {
                detailsHTML += `<p>Phone: ${user.phone}</p>`;
            }
        }
        
        detailsHTML += `<p>Point: ${user.point || 0}</p>`;
        detailsHTML += `<p>Checked In: ${user.isCheckIn ? 'Yes' : 'No'}</p>`;
        
        document.getElementById('detailsContent').innerHTML = detailsHTML;
        document.getElementById('checkInButton').style.display = user.isCheckIn ? 'none' : 'inline-block';
        document.getElementById('printButton').style.display = user.isCheckIn ? 'inline-block' : 'none';
        currentUserId = user._id; // Store the current user ID for check-in
    }
    
    // Show user details (legacy function for compatibility)
    function showDetails(name, table, company, phone, isCheckIn, userId, point) {
        // 這是一個兼容性函數，現在直接從API獲取完整用戶數據
        if (userId) {
            fetch(`/events/${eventId}/users/${userId}`)
                .then(response => response.json())
                .then(user => {
                    showDetailsFromUser(user);
                })
                .catch(error => {
                    console.error('Error fetching user:', error);
                });
        }
    }

    // Check in user
    function checkInUser() {
        if (!currentUserId) {
            alert('No user selected for check-in.');
            return;
        }
        $.ajax({
            url: `/events/${eventId}/users/${currentUserId}`, // Correct URL for check-in
            method: 'PUT', // Using PUT method for check-in
            contentType: 'application/json',
            data: JSON.stringify({ isCheckIn: true }), // Add isCheckIn: true
            success: function(response) {
                alert('User checked in successfully!');
                $('#addGuestModal').modal('hide'); // 關閉模態框
                fetchUsers(); // Refresh user list
            },
            error: function(err) {
                console.error('Error checking in user:', err);
                alert('Failed to check in user.');
            }
        });
    }

    // Search users
    function searchUsers() {
        const input = document.getElementById('searchInput').value.toLowerCase();
        const rows = document.querySelectorAll('#userList tr');
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(input) ? '' : 'none';
        });
    }

    // Open Lightbox
    function openLightbox() {
        document.getElementById('lightbox').style.display = 'flex';
        startScanning(); // Start scanning
    }

    // Close Lightbox
    function closeLightbox() {
        document.getElementById('lightbox').style.display = 'none';
        if (scanning) {
            html5QrCode.stop(); // Stop scanning
            scanning = false;
        }
    }

    // Start scanning QR code
    function startScanning() {
        if (scanning) return; // If already scanning, do not start again
        scanning = true;
        html5QrCode.start(
            { facingMode: "environment" }, // Use rear camera
            {
                fps: 10, // Frames per second
                qrbox: 250 // Size of QR code box
            },
            (decodedText, decodedResult) => {
                // When QR code is scanned
                scanning = false; // Stop scanning
                html5QrCode.stop(); // Stop scanning
                // Assume QR code contains user ID
                const userId = decodedText.split(',')[0];
                fetch(`/events/${eventId}/users/${userId}`)
                    .then(response => response.json())
                    .then(user => {
                        if (user) {
                            // If user is not checked in, perform check-in
                            if (!user.isCheckIn) {
                                $.ajax({
                                    url: `/events/${eventId}/users/${userId}`,
                                    method: 'PUT',
                                    contentType: 'application/json',
                                    data: JSON.stringify({ isCheckIn: true }),
                                    success: function(response) {
                                        console.log('Check-in successful:', response); // Debug log
                                        // Update the user object with new check-in status
                                        const updatedUser = { ...user, isCheckIn: true };
                                        showDetails(updatedUser.name, updatedUser.table, updatedUser.company, updatedUser.phone, true, updatedUser._id, updatedUser.point || 0);
                                        alert('User checked in successfully!');
                                        // Update button states first
                                        document.getElementById('checkInButton').style.display = 'none';
                                        document.getElementById('printButton').style.display = 'inline-block';
                                        // Then refresh the user list to update the table
                                        setTimeout(() => {
                                            fetchUsers();
                                        }, 100); // Small delay to ensure server update
                                    },
                                    error: function(err) {
                                        console.error('Error checking in user:', err);
                                        alert('Failed to check in user.');
                                    }
                                });
                            } else {
                                // User is already checked in
                                showDetails(user.name, user.table, user.company, user.phone, user.isCheckIn, user._id, user.point || 0);
                                alert('User is already checked in.');
                                fetchUsers();
                            }
                        } else {
                            alert('User not found');
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching user:', error);
                        alert('User not found');
                    });
                closeLightbox(); // Close Lightbox
            },
            (errorMessage) => {
                // When scan fails
                console.warn(`QR Code scan error: ${errorMessage}`);
            }
        ).catch(err => {
            console.error('Unable to start scanning:', err);
        });
    }

    // Print user details
    function printDetails() {
        // 只獲取姓名和公司信息，不包含 Table、Phone、Checked In
        const detailsElement = document.getElementById('detailsContent');
        const name = detailsElement.querySelector('h4').textContent;
        const company = detailsElement.querySelector('p:nth-of-type(2)').textContent.replace('Company: ', '');
        
        const printContent = `
            <style>
                @page {
                    size: 62mm 100mm;
                    margin: 0;
                }
                body {
                    width: 62mm;
                    height: 100mm;
                    margin: 0;
                    padding: 2mm;
                    font-family: Arial, sans-serif;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                    align-items: stretch;
                    box-sizing: border-box;
                }
                .content-container {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: stretch;
                    width: 100%;
                    height: 100%;
                    gap: 3mm;
                }
                .top-section {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }
                .bottom-section {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                    text-align: center;
                }
                h1 {
                    font-size: 22px;
                    margin: 0 0 1mm 0;
                    font-weight: bold;
                    line-height: 1.1;
                    text-align: center;
                    width: 100%;
                }
                .qrcode {
                    width: 38mm;
                    height: 38mm;
                }
                h3 {
                    font-size: 16px;
                    margin: 0;
                    color: #666;
                    font-weight: bold;
                    line-height: 1.1;
                    text-align: center;
                    width: 100%;
                }
            </style>
            <div class="content-container">
                <div class="top-section">
                    <div class="qrcode">
                        <img src="https://api.qrserver.com/v1/create-qr-code/?data=${name}&size=150x150" alt="QR Code" style="width: 100%; height: 100%;">
                    </div>
                </div>
                <div class="bottom-section">
                    <h1>${name}</h1>
                    <h3>${company}</h3>
                </div>
            </div>
        `;
        
        const printWindow = window.open('', '', 'height=600,width=800');
        printWindow.document.write('<html><head><title>Print User Details</title>');
        printWindow.document.write('</head><body>');
        printWindow.document.write(printContent);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        
        // printWindow.print();
        printLabel();
    }
    function printLabel() {
        const detailsElement = document.getElementById('detailsContent');
        const name = detailsElement.querySelector('h4').textContent;
        const company = detailsElement.querySelector('p:nth-of-type(2)').textContent.replace('Company: ', '');
        
        const printUrl = `brotherwebprint://print?filename=rsvp_label.lbx&size=62x100&copies=1&name=${encodeURIComponent(name)}&qrcode=${encodeURIComponent(name)}&company=${encodeURIComponent(company)}`;
        
        window.location.href = printUrl; // Use URL scheme to send print request
    }

    // 添加用戶的功能
    $('#addGuestForm').on('submit', function(event) {
        event.preventDefault(); // 防止表單默認提交

        const name = $('#guestName').val();
        const company = $('#guestCompany').val();
        const phone = $('#guestPhone').val();

        // 這裡可以發送 AJAX 請求到後端以添加用戶
        $.ajax({
            url: '/events/<%= event._id %>/users', // 根據您的路由設置調整 URL
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ 
                name, 
                table, 
                company, 
                phone, 
                role: 'guest', // 添加 role
                isCheckIn: true // 添加 checkin
            }),
            success: function(response) {
                alert('Guest added successfully!');
                $('#addGuestModal').modal('hide'); // 關閉模態框
