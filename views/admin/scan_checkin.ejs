<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <title>Guest Check-in</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .scan-container {
            display: flex;
            flex-wrap: nowrap;
            margin-top: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .user-list {
            width: 70%;
            border-right: 1px solid #dee2e6;
            padding: 20px; /* Increased padding */
            background-color: #ffffff;
            border-radius: 10px 0 0 10px;
            overflow: hidden;
        }
        .user-details {
            width: 30%;
            padding: 20px; /* Increased padding */
            background-color: #ffffff;
            border-radius: 0 10px 10px 0;
            border-left: 1px solid #dee2e6;
        }
        h4 {
            margin-top: 0;
        }
        /* Lightbox styles */
        .lightbox {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
        }
        .lightbox-content {
            position: relative;
            width: 80%;
            max-width: 600px;
        }
        #reader {
            text-align: center !important;
            margin: 0 auto !important;
        }
        #reader > div {
            margin: 0 auto !important;
            text-align: center !important;
            display: inline-block !important;
        }
        #reader video,
        #reader canvas,
        #reader img {
            margin: 0 auto !important;
            display: block !important;
            max-width: 100% !important;
        }
        #reader__dashboard,
        #reader__camera_selection,
        #reader__scan_region {
            margin: 0 auto !important;
            text-align: center !important;
        }
        #checkInButton {
            display: none;
        }
        #printButton {
            display: none;
        }
        @media (max-width: 992px) {
            .scan-container {
                flex-direction: column;
                box-shadow: none;
            }
            .user-list,
            .user-details {
                width: 100%;
                border-radius: 10px;
                border: none;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
                margin-bottom: 20px;
            }
            .user-details {
                margin-bottom: 0;
            }
        }
        @media (max-width: 576px) {
            .user-list,
            .user-details {
                padding: 15px;
            }
            #userTable {
                font-size: 14px;
            }
            #userDetails h4 {
                font-size: 18px;
            }
            #userDetails p {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>

<div class="scan-container container-fluid">
    <div class="user-list">
        <h4>Guest List</h4>
        
        <!-- <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search Users..." onkeyup="searchUsers()"> -->
        <button id="scanButton" class="btn btn-primary mt-3" onclick="openLightbox()">Scan QR Code</button>
        <button id="refreshListButton" class="btn btn-info mt-3 ml-2" onclick="refreshUserList()">Refresh List</button>
        <!-- <button id="addGuestButton" class="btn btn-success mt-3" data-toggle="modal" data-target="#addGuestModal">Add Guest</button> -->
        
        <div class="table-responsive mt-3">
            <table id="userTable" class="table table-striped table-bordered mb-0">
                <thead>
                    <tr>
                        <% if (formConfig && formConfig.sections) { %>
                            <% formConfig.sections.forEach(section => { %>
                                <% if (section.visible && section.fields) { %>
                                    <% section.fields.forEach(field => { %>
                                        <% if (field.visible) { %>
                                            <th>
                                                <% 
                                                let displayLabel = '';
                                                if (typeof field.label === 'string') {
                                                    displayLabel = field.label;
                                                } else if (field.label && field.label[formConfig.defaultLanguage]) {
                                                    displayLabel = field.label[formConfig.defaultLanguage];
                                                } else if (field.label && field.label.zh) {
                                                    displayLabel = field.label.zh;
                                                } else {
                                                    displayLabel = field.fieldName || '';
                                                }
                                                %>
                                                <%= displayLabel %>
                                            </th>
                                        <% } %>
                                    <% }); %>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <!-- 預設列（如果沒有formConfig） -->
                            <th>Email</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <% } %>
                        <th>Point</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="userList">
                    <% event.users.forEach(user => { %>
                        <% 
                        // 構建參數字符串用於 showDetails 函數
                        let detailParams = '';
                        if (formConfig && formConfig.sections) {
                            const params = [];
                            formConfig.sections.forEach(section => {
                                if (section.visible && section.fields) {
                                    section.fields.forEach(field => {
                                        if (field.visible) {
                                            params.push("'" + (user[field.fieldName] || '').toString().replace(/'/g, "\\'") + "'");
                                        }
                                    });
                                }
                            });
                            detailParams = params.join(', ') + ', ' + user.isCheckIn + ', \'' + user._id + '\', ' + (user.point || 0);
                        } else {
                            detailParams = "'" + (user.name || '').toString().replace(/'/g, "\\'") + "', '" + (user.table || '').toString().replace(/'/g, "\\'") + "', '" + (user.company || '').toString().replace(/'/g, "\\'") + "', '" + (user.phone || '').toString().replace(/'/g, "\\'") + "', " + user.isCheckIn + ", '" + user._id + "', " + (user.point || 0);
                        }
                        %>
                        <tr data-user-id="<%= user._id %>" onclick="showDetailsFromRow(this)">
                            <% if (formConfig && formConfig.sections) { %>
                                <% formConfig.sections.forEach(section => { %>
                                    <% if (section.visible && section.fields) { %>
                                        <% section.fields.forEach(field => { %>
                                            <% if (field.visible) { %>
                                                <td><%= user[field.fieldName] || '-' %></td>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                <% }); %>
                            <% } else { %>
                                <!-- 預設列（如果沒有formConfig） -->
                                <td><%= user.email || '-' %></td>
                                <td><%= user.name || '-' %></td>
                                <td><%= user.phone || '-' %></td>
                            <% } %>
                            <td><%= user.point || 0 %></td>
                            <td>
                                <span class="<%= user.isCheckIn ? 'text-primary' : 'text-secondary' %>">
                                    <%= user.isCheckIn ? 'Checked In' : 'Check In' %>
                                </span>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
    </div>
    <div class="user-details" id="userDetails">
        <h4>Guest Details</h4>
        <p>Select a guest to view details.</p>
        <div id="detailsContent"></div>
        <button id="checkInButton" class="btn btn-primary mt-3" onclick="checkInUser()">Check In</button>
        <button id="printButton" class="btn btn-secondary mt-3" onclick="printDetails()">Print</button>
        <button id="refreshButton" class="btn btn-info mt-3" onclick="refreshUserList()">Refresh List</button>
    </div>
</div>

<!-- Add Guest Modal -->
