<%- include ("components/header") %>
<%- include ("components/menu", {eventId: eventId }) %>
<link rel="stylesheet" href="/admin/assets/css/cs-skin-elastic.css">
<link rel="stylesheet" href="/admin/assets/css/style.css">
<div id="right-panel" class="right-panel">
    <%- include ("components/rightpanel_header") %>
    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Edit Prize - <%= event.name %></strong>
                        </div>
                        <div class="card-body">
                            <form id="editPrizeForm">
                                <div class="form-group">
                                    <label for="name">Prize Name</label>
                                    <input type="text" class="form-control" id="name" name="name" value="<%= prize.name %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="prizeImage">Prize Image</label>
                                    <input type="file" class="form-control-file" id="prizeImage" name="prizeImage" accept="image/*">
                                    <small class="form-text text-muted">JPG, PNG, GIF supported, max 5MB</small>
                                    <% if (prize.picture) { %>
                                        <div class="mt-2">
                                            <label>Current image:</label>
                                            <img src="<%= prize.picture %>" alt="<%= prize.name %>" style="max-width: 100px; max-height: 100px; display: block; margin-top: 5px;">
                                        </div>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="picture">Prize Image URL (optional)</label>
                                    <input type="text" class="form-control" id="picture" name="picture" value="<%= prize.picture || '' %>" placeholder="https://example.com/image.jpg or leave empty to use uploaded image">
                                    <small class="form-text text-muted">If you upload an image file, this URL will be ignored</small>
                                </div>
                                <div class="form-group">
                                    <label for="unit">Quantity</label>
                                    <input type="number" class="form-control" id="unit" name="unit" value="<%= prize.unit %>" min="0" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Update Prize</button>
                                <a href="/prizes/<%= eventId %>/prizes/list" class="btn btn-secondary">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("./components/footer") %>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#editPrizeForm').on('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData();
            formData.append('name', $('#name').val());
            formData.append('unit', $('#unit').val());
            
            // If image file uploaded use file; otherwise use URL
            const imageFile = $('#prizeImage')[0].files[0];
            if (imageFile) {
                formData.append('prizeImage', imageFile);
            } else {
                formData.append('picture', $('#picture').val());
            }
            
            fetch(`/prizes/<%= eventId %>/prizes/<%= prize._id %>`, {
                method: 'PUT',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data._id) {
                    alert('Prize updated successfully!');
                    window.location.href = `/prizes/<%= eventId %>/prizes/list`;
                } else {
                    alert('Update failed: ' + (data.message || 'Unknown error'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Update failed');
            });
        });
    });
</script> 