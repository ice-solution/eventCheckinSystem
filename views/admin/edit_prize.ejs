<%- include ("components/header") %>
<%- include ("components/menu", {eventId: eventId }) %>
<link rel="stylesheet" href="/admin/assets/css/cs-skin-elastic.css">
<link rel="stylesheet" href="/admin/assets/css/style.css">
<div id="right-panel" class="right-panel">
    <%- include ("components/rightpanel_header") %>
    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">編輯獎品 - <%= event.name %></strong>
                        </div>
                        <div class="card-body">
                            <form id="editPrizeForm">
                                <div class="form-group">
                                    <label for="name">獎品名稱</label>
                                    <input type="text" class="form-control" id="name" name="name" value="<%= prize.name %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="prizeImage">獎品圖片</label>
                                    <input type="file" class="form-control-file" id="prizeImage" name="prizeImage" accept="image/*">
                                    <small class="form-text text-muted">支持 JPG, PNG, GIF 格式，最大 5MB</small>
                                    <% if (prize.picture) { %>
                                        <div class="mt-2">
                                            <label>當前圖片：</label>
                                            <img src="<%= prize.picture %>" alt="<%= prize.name %>" style="max-width: 100px; max-height: 100px; display: block; margin-top: 5px;">
                                        </div>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="picture">獎品圖片URL（可選）</label>
                                    <input type="url" class="form-control" id="picture" name="picture" value="<%= prize.picture || '' %>" placeholder="https://example.com/image.jpg">
                                    <small class="form-text text-muted">如果上傳了圖片文件，此URL將被忽略</small>
                                </div>
                                <div class="form-group">
                                    <label for="unit">數量</label>
                                    <input type="number" class="form-control" id="unit" name="unit" value="<%= prize.unit %>" min="0" required>
                                </div>
                                <button type="submit" class="btn btn-primary">更新獎品</button>
                                <a href="/prizes/<%= eventId %>/prizes/list" class="btn btn-secondary">返回列表</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("./components/footer") %>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#editPrizeForm').on('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData();
            formData.append('name', $('#name').val());
            formData.append('unit', $('#unit').val());
            
            // 如果有上傳圖片文件，使用文件；否則使用URL
            const imageFile = $('#prizeImage')[0].files[0];
            if (imageFile) {
                formData.append('prizeImage', imageFile);
            } else {
                formData.append('picture', $('#picture').val());
            }
            
            fetch(`/prizes/<%= eventId %>/prizes/<%= prize._id %>`, {
                method: 'PUT',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data._id) {
                    alert('獎品更新成功！');
                    window.location.href = `/prizes/<%= eventId %>/prizes/list`;
                } else {
                    alert('更新失敗：' + (data.message || '未知錯誤'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('更新失敗');
            });
        });
    });
</script> 